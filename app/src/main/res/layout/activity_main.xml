<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#231c24"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/button3"
        android:text="Simpan Bukti"
        android:textAllCaps="false"
        android:layout_above="@id/button"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:backgroundTint="#2596be"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/button"
        android:text="Foto"
        android:textAllCaps="false"
        android:layout_above="@id/button2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:backgroundTint="#f9aa14"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/button2"
        android:text="Ambil dari Galeri"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#f9aa14"
        android:backgroundTint="#ffffff"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        />
    <ImageView
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_marginTop="10sp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Masukan Nomor Order Disini"
        android:gravity="center"
        android:textCursorDrawable="@null"
        android:textStyle="bold"
        android:textSize="20sp"
        android:backgroundTint="#f9aa14"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/nomor"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Jenis Menu:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:id="@+id/classified"
        android:layout_below="@+id/nomor"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#f9aa14"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/result"
        android:layout_below="@+id/classified"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Tanggal:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:id="@+id/tgl"
        android:layout_below="@+id/result"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#f9aa14"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/resulttgl"
        android:layout_below="@+id/tgl"
        />

</RelativeLayout>